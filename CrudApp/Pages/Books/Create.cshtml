@page
@model CrudApp.Pages.Books.CreateModel
@{
}

<br />
<h2>Add New Book</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' arialabel='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Title</label>
        <div class-col-sm-6>
            <input type="text" class="form-control" name="title" value="@Model.bookInfo.title"/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Author</label>
        <div class-col-sm-6>
            <input type="text" class="form-control" name="author" value="@Model.bookInfo.author" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Genre</label>
        <div class-col-sm-6>
            <input type="text" class="form-control" name="genre" value="@Model.bookInfo.genre" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Summary</label>
        <div class-col-sm-6>
            <input type="text" class="form-control" name="summary" value="@Model.bookInfo.summary" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Books" role="button">Cancel</a>
        </div>

    </div>

</form>


